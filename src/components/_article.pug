mixin article(article)
    div
        .relative.overflow-hidden.cursor-pointer.rounded-t-lg
            img.w-full.object-cover.transform.transition.duration-500(class='hover:scale-110' src=`${article.img}`)
            img.absolute.left-3.z-1.bottom-2.mr-3.bg-white.p-1.rounded-full.h-12(src=`${article.avatar}`)
            .absolute.left-3.z-1.bottom-2.mr-3.flex.items-center.mt-4
                img.bg-white.p-1.rounded-full.mr-3.rounded-full.h-12(src=`${article.avatar}`)
        .p-3
            h3.text-gray-800.text-xl.font-medium.mb-3(class="hover:cursor-pointer hover:text-gray-500")= article.name
            span.text-gray-500= article.date